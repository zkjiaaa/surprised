.headbg {
    height: 250rpx;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: -1;
    left: 0;
}

.little {
    font-size: 20rpx;
}

.tui-modal-custom {
    text-align: center;
    width: 100%;
}

.li::after {
    border: none;
}

.hezi {
    position: fixed;
    top: 360rpx;
    right: 20rpx;
    width: 140rpx;
    border-radius: 10rpx;
    text-align: center;
}

.moreplay {
    box-sizing: border-box;
    padding: 10rpx;
    color: #fff;
    border-radius: 8rpx;
}

.hezi image {
    width: 70rpx;
    height: 70rpx;
}

page {
    background-color: #f1f1f1;
    font-size: 30rpx;
}

.header .bg {
    width: 100%;
    padding-top: 100rpx;
}

.box {
    width: 690rpx;
    border-radius: 20rpx;
    margin: 0 auto;
    background: #fff;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}

.box .box-hd {
    display: flex;
    flex-wrap: wrap;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: center;
    justify-content: center;
}

.box .box-hd .avator {
    width: 160rpx;
    height: 160rpx;
    background: #fff;
    border: 5rpx solid #fff;
    border-radius: 50%;
    margin-top: -80rpx;
    overflow: hidden;
}

.box .box-hd .avator ._img {
    width: 100%;
    height: 100%;
}

.box .box-hd .phone-number {
    width: 100%;
    text-align: center;
}

.box .box-hd .phone-number ._span {
    margin: 0 10rpx;
}

.box .box-bd {
    display: flex;
    flex-wrap: nowrap;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: center;
    justify-content: center;
}

.box .box-bd .item {
    -webkit-box-flex: 1;
    flex: 1 1 auto;
    display: flex;
    flex-wrap: wrap;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: center;
    justify-content: center;
    border-right: 1px solid #f1f1f1;
    margin: 15rpx 0;
    width: 33.33%;
}

.box .box-bd .item:last-child {
    border: none;
}

.box .box-bd .item .text {
    width: 100%;
    text-align: center;
    margin-top: 14rpx;
    font-size: 26rpx;
}

.list-content {
    background: #fff;
    width: 690rpx;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 40rpx;
    margin-top: 30rpx;
}

.list {
    width: 100%;
    border-bottom: 15rpx solid #f1f1f1;
    background: #fff;
}

.list:last-child {
    border: none;
}

.list .li {
    width: 92%;
    height: 100rpx;
    padding: 0 4%;
    border-bottom: 1px solid #f3f3f3;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    background: #fff;
    margin: 0 auto;
    padding: 0;
    font-size: 30rpx;
    border: none;
}

.list .li.noborder {
    border-bottom: 0;
}

.list .li .icon {
    flex-shrink: 0;
    width: 50rpx;
    height: 50rpx;
}

.list .li .icon image {
    width: 50rpx;
    height: 50rpx;
}

.list .li .text {
    padding-left: 20rpx;
    width: 100%;
    color: #666;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.list .li .to {
    flex-shrink: 0;
    width: 40rpx;
    height: 40rpx;
}