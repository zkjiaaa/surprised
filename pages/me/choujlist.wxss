.nodata {
    font-size: 28rpx;
    text-align: center;
}

.lingq {
    width: 164rpx;
    position: absolute;
    top: 60rpx;
    margin-left: -2rpx;
    text-align: center;
    line-height: 76rpx;
    background: #e9683e;
    color: #fff;
    font-size: 28rpx;
    height: 76rpx;
}

page {
    background-color: #fff;
    font-size: 30rpx;
}

.card {
    width: 94%;
    height: 450rpx;
    background-color: #fff;
    overflow: hidden;
    margin: 0 auto 42rpx auto;
    background: none;
    box-shadow: 0 0 5px 0 rgba(0,0,0,.1);
    border-radius: 20rpx;
    position: relative;
}

.card-title {
    position: absolute;
    bottom: 0;
    z-index: 10;
    padding: 28rpx 28rpx;
    box-sizing: border-box;
    height: 140rpx;
    color: #333;
    width: 100%;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    background: #fff;
}

.card-title-time {
    font-size: 28rpx;
    margin-top: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 400rpx;
}

.card-title-item {
    font-size: 32rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 400rpx;
}

.card-img {
    position: absolute;
    width: 100%;
    height: 100%;
}

.title {
    height: 138rpx;
    width: 100%;
    position: fixed;
    top: 0rpx;
    left: 0;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    background: #fff;
    z-index: 20;
}

.title-item {
    width: 50%;
    text-align: center;
    line-height: 138rpx;
    font-size: 36rpx;
}

.active {
    color: #333!important;
}